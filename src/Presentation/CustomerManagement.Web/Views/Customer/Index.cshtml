@using CustomerManagement.Application.Features.Queries.GetCustomers
@model GetCustomersQueryResponse

@{
    ViewData["Title"] = "Customers";
}


<h2>Customers</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (!Model.Success)
{
    <p>An error occurred while retrieving customers.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Fullname</th>
                <th>Date of Birth</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Bank Account Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Pagination.Items)
            {
                <tr>
                    <td>@customer.FirstName @customer.LastName</td>
                    <td>@customer.DateOfBirth.ToShortDateString()</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Email</td>
                    <td>@customer.BankAccountNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@customer.Id">Details</a> |
                        <a href="javascript:;" class="delete-customer" data-customer-id="@customer.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section scripts {



    <script>
        $(document).ready(function () {
            $('.delete-customer').click(function (e) {
                e.preventDefault();

                var customerId = $(this).data('customer-id');
                if (confirm('Are you sure you want to delete this customer?')) {
                    $.ajax({
                        url: `/Customer/Delete/${customerId}`,
                        type: 'POST',
                        success: function (result) {
                            window.location.href = '/Customer/Index';
                        },
                        error: function () {
                            alert('Failed to delete customer.');
                        }
                    });
                }
            });
        });
    </script>

    }

    @if (Model.Pagination.Pages > 1)
    {
        <div>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @for (var i = 1; i <= Model.Pagination.Pages; i++)
                    {
                        <li class="page-item @(Model.Pagination.CurrentPageIndex == i ? "active" : "")">
                            <a class="page-link" href="?pageIndex=@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
}